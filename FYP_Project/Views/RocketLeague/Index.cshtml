@{
    ViewData["Title"] = "Players";
}
@model FYP_Project.ViewModels.GameViewModel

<!--Boostrap for this page can be found here:https://startbootstrap.com/previews/business-frontpage-->
<!-- Core theme CSS (includes Bootstrap)-->
<link href="css/styles.css" rel="stylesheet" />

@section Banner{
    <header class="bg-dark py-5">
        <div class="container px-5">
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-6">
                    <div class="text-center my-5">
                        <h1 class="display-5 fw-bolder text-white mb-2">@Model.EditableGame.GameName</h1>
                        <p class="lead text-white-50 mb-4">Explore more about @Model.EditableGame.GameName below!</p>
                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                            <a class="btn btn-primary btn-lg px-4 me-sm-3" asp-controller=RocketLeague asp-action=Teams>Teams</a>
                            <a class="btn btn-outline-light btn-lg px-4" asp-controller=RocketLeague asp-action=Bracket>Bracket</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
}

