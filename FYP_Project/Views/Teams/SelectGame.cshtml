@model FYP_Project.ViewModels.TeamViewModel
@{
    ViewData["Title"] = "Select Game";
    List<String> GameNames = new List<String>();
}
@foreach (var Game in Model.Games)
{

        GameNames.Add(Game.GameName);
    
}
<!-- code for register page found here: https://startbootstrap.com/snippets/registration-page -->


<section id="services" class="services section-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Select Game</h5>

                        @using (var form = Html.BeginForm("JoinTeam", "Teams", FormMethod.Post))
                        {                          

                            <label for="img">Select the game you would like to participate in:</label>
                            <div class="form-floating mb-3">
                                @Html.DropDownList("GameName", new SelectList(GameNames))
                            </div>

                            <div class="d-grid mb-2">
                                <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Next</button>
                            </div>

                            @Html.ValidationSummary()
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" type="text/css" href="~/css/LogIn.css" />

</section>