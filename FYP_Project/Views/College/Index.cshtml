@{
    ViewData["Title"] = "Colleges";
}
@model FYP_Project.ViewModels.CollegeViewModel
<section id="colleges">
    <div class="container" data-aos="fade-up">
        <div class="row content">
            <h1>Colleges</h1>
            <table id="collegeTable" style="width:100%" class="table table-striped table-bordered table-hover">
                <tr>
                    <td colspan="5">
                        @using (var form = Html.BeginForm("CreateUpdate", "College", FormMethod.Post))
                        {
                            @Html.HiddenFor(model => model.EditableCollege.CollegeID)
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.EditableCollege.CollegeName, new { @class = "form-control", placeholder = "College Name" })
                                @Html.TextBoxFor(model => model.EditableCollege.CollegeAbbv, new { @class = "form-control", placeholder = "College Abbreviation" })
                                @Html.TextBoxFor(model => model.EditableCollege.CollegeCounty, new { @class = "form-control", placeholder = "College County" })
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-success">@(Model.EditableCollege.CollegeID > 0 ? "Update" : "Add")</button>
                                </div>
                            </div>
                            @Html.ValidationSummary()
                        }
                    </td>
                </tr>
                @foreach (var college in Model.Colleges)
                {
                    <tr>
                        <td class="text-center">
                            @college.CollegeName
                        </td>
                        <td class="text-center">
                            @college.CollegeAbbv
                        </td>
                        <td class="text-center">
                            @college.CollegeCounty
                        </td>
                        <td class="text-center">
                            <a href="/College/Edit/@college.CollegeID" onclick="return confirm('Are you sure you want to edit this college?');" class="btn btn-sm btn-success">Edit</a>
                        </td>
                        <td class="text-center">
                            <a href="/College/Delete/@college.CollegeID" onclick="return confirm('Are you sure tou want to delete this college?');" class="btn btn-sm btn-Danger">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

</section>